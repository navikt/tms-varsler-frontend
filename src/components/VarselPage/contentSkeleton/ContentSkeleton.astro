---
import {Skeleton, Heading, Box, HStack, VStack} from "@navikt/ds-react";
import styles from "./ContentSkeleton.module.css"
---

<div class={styles.skeleton}>
    <Heading as={Skeleton} size="large">
        Oppgaver
    </Heading>
    {
        <Box margin="1 0" padding="6" borderRadius="xlarge" shadow="xsmall" className="w-56">
            <HStack gap="3">
                <Skeleton variant="circle" width={32} height={32}/>
                <VStack width="90%" gap="1">
                    <Skeleton variant="rectangle" width="90%"/>
                    <Skeleton variant="rectangle" width="120px"/>
                </VStack>
            </HStack>
        </Box>
        <Box padding="6" borderRadius="xlarge" shadow="xsmall" className="w-56">
            <HStack gap="3">
                <Skeleton variant="circle" width={32} height={32}/>
                <VStack width="90%" gap="1">
                    <Skeleton variant="rectangle" width="90%"/>
                    <Skeleton variant="rectangle" width="120px"/>
                </VStack>
            </HStack>
        </Box>
    }
</div>